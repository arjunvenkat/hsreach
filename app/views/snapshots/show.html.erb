<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Snapshot #<%= @snapshot.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>User</dt>
              <dd><%= @snapshot.user_id %></dd>

              <dt>Nwea math</dt>
              <dd><%= @snapshot.nwea_math %></dd>

              <dt>Nwea reading</dt>
              <dd><%= @snapshot.nwea_reading %></dd>

              <dt>Math</dt>
              <dd><%= @snapshot.math %></dd>

              <dt>Reading</dt>
              <dd><%= @snapshot.reading %></dd>

              <dt>Science</dt>
              <dd><%= @snapshot.science %></dd>

              <dt>Social studies</dt>
              <dd><%= @snapshot.social_studies %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), snapshots_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_snapshot_path(@snapshot), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @snapshot, method: :delete, data: { confirm: "Do you really want to delete this snapshot?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
